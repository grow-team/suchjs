      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "./lib/index.js",
      "sourceMap": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
